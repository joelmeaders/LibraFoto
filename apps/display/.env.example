# LibraFoto Display Frontend Environment Variables
# Copy this file to .env.local for local development overrides

# API Base URL (default: /api - proxied by Vite in development)
# In production, set this to the full API URL
VITE_API_BASE_URL=/api

# Enable debug logging (default: true in development)
VITE_DEBUG=true

# Settings polling interval in milliseconds (default: 60000 = 1 minute)
VITE_SETTINGS_POLL_INTERVAL=60000

# Number of photos to preload (default: 10)
VITE_PRELOAD_COUNT=10

# Minimum queue size before fetching more photos (default: 3)
VITE_PRELOAD_THRESHOLD=3

# Retry delay for failed API calls in milliseconds (default: 5000)
VITE_RETRY_DELAY=5000

# Maximum retry attempts (default: 3)
VITE_MAX_RETRIES=3
