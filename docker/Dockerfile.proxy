# syntax=docker/dockerfile:1.4

# Nginx reverse proxy for LibraFoto
FROM nginx:alpine
ARG VERSION=dev

# Add version labels
LABEL version="${VERSION}" \
      name="LibraFoto Proxy" \
      description="LibraFoto nginx reverse proxy"

ENV LIBRAFOTO_VERSION=${VERSION}

# Copy nginx configuration
COPY docker/nginx-proxy.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
