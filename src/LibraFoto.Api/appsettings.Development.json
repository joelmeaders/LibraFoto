{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // Development: Admin runs on separate port
  "FrontendUrls": {
    "AdminUrl": "http://localhost:4200"
  }

