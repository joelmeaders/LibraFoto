  // Override in appsettings.Development.local.json (not tracked by git):
  // {
  //   "ConnectionStrings": {
  //     "LibraFotoDb": "Data Source=./librafoto.db"  // Use current directory instead
  //   },
  //   "Storage": {
  //     "LocalPath": "./photos"  // Use current directory instead
  //   }
  // }
}
