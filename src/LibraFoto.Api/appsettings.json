{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // Database Configuration
  // If not specified, uses platform-specific default:
  // - Windows: %LOCALAPPDATA%\LibraFoto\librafoto.db
  // - Linux/Mac: ~/.local/share/LibraFoto/librafoto.db
  // - Docker: ./data/librafoto.db
  // "ConnectionStrings": {
  //   "LibraFotoDb": "Data Source=/path/to/custom/librafoto.db"
  // },

  // Storage Configuration
  // If not specified, uses platform-specific default:
  // - Windows: %LOCALAPPDATA%\LibraFoto\photos
  // - Linux/Mac: ~/.local/share/LibraFoto/photos
  // - Docker: ./data/photos
  // "Storage": {
  //   "LocalPath": "/path/to/custom/photos"
  // },

  // Shorthand: Set LIBRAFOTO_DATA_DIR environment variable to configure both paths:
  // LIBRAFOTO_DATA_DIR=/custom/data will set:
  // - Database: /custom/data/librafoto.db
  // - Storage: /custom/data/photos
  // Individual settings above take precedence over LIBRAFOTO_DATA_DIR

  // Cache Configuration
  // Used to store downloaded files from cloud providers (Google Photos, etc.)
  // If not specified, uses platform-specific default:
  // - Windows: %APPDATA%\LibraFoto\cache
  // - Linux/Mac: ~/.local/share/LibraFoto/cache
  "Cache": {
    // "Directory": "/path/to/custom/cache",
    "MaxSizeBytes": 5368709120 // 5GB default
  },

  "Jwt": {
    "Issuer": "LibraFoto",
    "Audience": "LibraFoto"
    // "Key" should be set via environment variable: Jwt__Key
  },

  // Frontend URLs Configuration
  // Used by display frontend to show QR code for admin access
  "FrontendUrls": {
    // Production default: admin served on same host at /admin path
    "AdminUrl": "/admin"
  }
}
